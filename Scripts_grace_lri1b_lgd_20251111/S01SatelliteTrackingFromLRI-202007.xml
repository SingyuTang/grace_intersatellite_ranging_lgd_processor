<?xml version="1.0" encoding="UTF-8" ?>
<groops>
	<global>
		<filename label="workspace">G:\GROOPS\PNAS2020Workspace</filename>
		<string label="instrument">lri</string>
		<time label="timeStart">58970</time>
		<time label="timeEnd">59091+23/24+59/1440+59/86400</time>
	</global>
	<program comment="timeSeries">
		<LoopPrograms>
			<loop>
				<timeSeries>
					<timeSeries>
						<uniformSampling>
							<timeStart link="timeStart"/>
							<timeEnd link="timeEnd"/>
							<sampling>1</sampling>
						</uniformSampling>
					</timeSeries>
					<variableLoopTime>loopTime</variableLoopTime>
				</timeSeries>
			</loop>
			<continueAfterError>0</continueAfterError>
			<processCountPerIteration>0</processCountPerIteration>
			<parallelLog>1</parallelLog>
			<program comment="satellite_tracking_from_{instrument}">
				<FileCreateDirectories>
					<directory>satellite_tracking_from_{instrument}</directory>
					<directory>satellite_tracking_from_{instrument}/{loopTime:%D}</directory>
				</FileCreateDirectories>
			</program>
			<program comment="satellite_tracking_from_{instrument}/{loopTime:%D}/gracefo_satelliteTracking_{loopTime:%D}_from_LRI1B.txt">
				<GraceL1b2SatelliteTracking>
					<outputfileSatelliteTracking>satellite_tracking_from_{instrument}/{loopTime:%D}/gracefo_satelliteTracking_{loopTime:%D}_from_LRI1B.txt</outputfileSatelliteTracking>
					<outputfileAntCentr>satellite_tracking_from_{instrument}/{loopTime:%D}/gracefo_antCentr_{loopTime:%D}_from_LRI1B.txt</outputfileAntCentr>
					<outputfileLighttime>satellite_tracking_from_{instrument}/{loopTime:%D}/gracefo_lighttime_{loopTime:%D}_from_LRI1B.txt</outputfileLighttime>
					<inputfile>{workspace}/gracefo_dataset\gracefo_1B_{loopTime:%D}_RL04.ascii.LRI/LRI1B_{loopTime:%D}_Y_04.txt</inputfile>
				</GraceL1b2SatelliteTracking>
			</program>
		</LoopPrograms>
	</program>
</groops>
